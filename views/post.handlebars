<div class="box">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>


 {{#if comments.length}}
  <div class="row">
    <div class="col-md-12">
      <h4>Comments:</h4>
      {{#each comments as |comment|}}
      <div class="row mb-2">
        <div class="col-md-12">
          <p>{{comment.comment}}</p>
          <p>- {{comment.user.name}} on {{format_date comment.date_created}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}


{{#if logged_in}}
<div class="row mt-4">
  <div class="col-md-6">
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-full">Write Comment:</label>
        <textarea class="form-input" id="comment-full" name="comment-full"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Comment</button>
      </div>
    </form>
  </div>
{{/if}}
</div>

<script src="../js/post.js"></script>