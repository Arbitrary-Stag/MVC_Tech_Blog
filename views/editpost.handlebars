<div class="row mt-4">
  <div class="col-md-6">
    <h3>Editing: {{title}}</h3>
    <form class="form update-post-form">
      <div class="form-group">
        <label for="new-post-title">Title:</label>
        <input class="form-input" type="text" id="new-post-title" name="new-post-title" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="new-post-desc">Description:</label>
        <textarea class="form-input" id="new-post-desc" name="new-post-desc">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" id="updateBtn" class="btn btn-primary btn-success">Update Blog Post</button>
      </div>
    </form>
      <div class="col-md-3">
        <button class="btn btn-md btn-danger"  id="cancelBtn">Cancel</button>
      </div>
  </div>
</div>

<script src="../js/editpost.js"></script>